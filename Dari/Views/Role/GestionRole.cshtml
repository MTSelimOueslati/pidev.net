@model IEnumerable<Dari.Models.Role>
@{
    ViewBag.Title = "GestionRole";
}

<h2>GestionRole</h2>
<p>
    @Html.ActionLink("CreateRole", "CreateRole")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdRole)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.roleType)
        </th>
        <th></th>
    </tr>

    @foreach (var item in ViewBag.roles)
    {
        <tr>
            <td>
                @item.IdRole
            </td>
            
            <td>
                @item.roleType
            </td>

            
                
               
        </tr>
    }

</table>
