@model Dari.Models.Subscription

@{
    ViewBag.Title = "ActivateSub";
    Layout = "~/Views/_LayoutPage1.cshtml";
}

<center><h2>********************Subscription Activation********************</h2></center>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<center>
    <div class="form-horizontal">
        <br />
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            <p>
                Please put the offer  <br /><br />
                12.00 for Premium<br /><br />
                7.00 for Surveillance<br /><br />
                5.00 for Normal<br /><br />
            </p>            <div class="col-md-10">
                @Html.EditorFor(model => model.offer, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.offer, "", new { @class = "text-danger" })
            </div>
        </div>


        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Buy" class="myButton" />
            </div>
        </div>
    </div>

</center>
}




<div>
    @Html.ActionLink("Back to List", "GestionSubscription")
</div>
